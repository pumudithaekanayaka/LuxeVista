<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/crown"
        android:label="@string/app_name"
        android:roundIcon="@drawable/crown"
        android:supportsRtl="true"
        android:theme="@style/Theme.LuxeVista"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LuxeVista">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".UserCreationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name=".CreateAttractionActivity" />
        <activity android:name=".AttractionsActivity" />
        <activity android:name=".InHouseServiceActivity" />
        <activity android:name=".RoomAddActivity" />
        <activity android:name=".RoomBookingActivity" />
        <activity android:name=".RoomViewActivity" />
        <activity android:name=".ServiceBookingActivity" />
        <activity android:name=".UserAccountActivity" />
        <activity android:name=".UserViewActivity" />
        <activity android:name=".AddPromotionActivity" />
        <activity android:name=".PromotionActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".UserEditActivity" />
    </application>

</manifest>